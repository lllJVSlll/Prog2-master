        <Rectangle Name="background" Height="400" Width="1250" Fill="Orange" Canvas.Left="0" />
        <Rectangle Name="background2" Height="400" Width="1250" Fill="LightGreen" Canvas.Left="1250" />

        <Rectangle Name="ground" Height="32" Width="792" Fill="Black" Canvas.Top="387" Canvas.Left="0"></Rectangle>
        
        <Rectangle Name="player" Height="99" Width="67" Fill="Brown" Canvas.Top="151" Canvas.Left="110" ></Rectangle>

        <Rectangle Name="obstacle" Height="178" Width="50" Fill="Red" Canvas.Top="320" Canvas.Left="721" ></Rectangle>

        <Label Name="scoreText" FontSize="32" FontWeight="Bold" Content="Score: 0" ></Label>
        
  
    </Canvas>
</Window>
